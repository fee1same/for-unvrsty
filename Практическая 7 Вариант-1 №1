print('-----Нахождения площади фигуры-----')
print()
print('Примечание: вводите название фигуры на Русском языке')
print()
import math
def F(n):
	if n=="Квадрат":
	    return(a*b)
	if n=="Ромб":
	    return((x*y)/2)
	if n=="Круг":
	    return(math.pi*r**2)
	    
print('Введите название фигуры, площадь которой хотите найти: ')
print()
n=input()
print()
if n=="Квадрат":
	a=int(input('Введите длину первой стороны: '))
	b=int(input('Введите длину второй стороны: '))
	print()
	print(F(n))
elif n=="Ромб":
	x=int(input('Введите длину первой диагонали: '))
	y=int(input('Введите длину второй диагонали: '))
	print()
	print(F(n))
elif n=="Круг":
	r=int(input('Введите радуис круга: '))
	print()
	print(F(n))
else:
	print('Впишите название фигуры строго с большой буквы \nили проверьте парвильность его написания')
print()
